</div>


<script>
  $(document).ready(function() {

    $( "#newTask" ).click(function() {
            $('<input>').attr('type','text').attr('name','tasks[]').appendTo("form"); 
            $('<br>').appendTo('form');
        return false;
    });
});  
</script>

