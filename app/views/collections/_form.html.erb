<h1 align = "center">Nova Lista</h1>

<div class="text-center">
<%= form_for(@collection) do |f| %>
    <div class="field">
        <%= f.label :Nome %>
        <%= f.text_field :name %>

        <%= f.label :PÃºblica %>
